@*@model IEnumerable<StoreFrontLab.DATA.EF.Product>*@
@model Dictionary<int, StoreFrontLab.UI.MVC.Models.ShoppingCartViewModel>
@{
    ViewBag.Title = "Cart";
}
<div class="col-md-10 offset-1 custom-formatting">
    <h2>Shopping Cart</h2>
    <table class="table">
        <tr>
            <th>
                Product
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value.Prod.Description)
            </th>
            <th>
                Image
            </th>
            <th>
               
            </th>
            <th>
                Vendor
            </th>
            <th>
                Price
            </th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Prod.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Prod.ProductImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Prod.ProductType1.TypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Prod.Vendor.VendorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Prod.Price)
                </td>
                
            </tr>
        }
    </table>
</div>