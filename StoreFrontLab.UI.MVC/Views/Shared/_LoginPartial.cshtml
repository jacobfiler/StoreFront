@using Microsoft.AspNet.Identity
@if (User.IsInRole("Admin"))
{

    <li class="nav-item">
        <a href="@Url.Action("Index", "ProductTypes")" class="nav-link">Product Types</a>
    </li>

    <li class="nav-item">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log off</a>
        }
    </li>

}
else
{
    <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
}
